@model SimpleWebsite.MVC.Models.Product

@{
    ViewData["Title"] = "Usuń";
}

<div class="row mt-5">
    <h1 class="display-5 text-center">Usunięcie drona z katalogu</h1>
    <h1 class="display-6 text-center">Czy jesteś pewny, że chcesz usunąć tego drona?</h1>
    <hr>
</div>
<div class="row">
    <div class="col text-start">
        <a type="button" class="btn btn-secondary" asp-action="Index">Powrót do katalogu</a>
    </div>
    <div class="col text-end">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Usuń" class="btn btn-danger"/>
        </form>
    </div>
</div>
<div class="row mt-3">
    <div class="col-12 justify-content-center">
        <table class="table table-bordered table-striped mt-3 ">
            <tbody>
                <tr>
                    <th scope="row">Nazwa</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th scope="row">Opis</th>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <th scope="row">Cena</th>
                    <td>@Html.DisplayFor(model => model.Price) zł (netto)</td>
                </tr>
                <tr>
                    <th scope="row">Zdjęcie</th>
                    <td><img src="/images/@Html.DisplayFor(model => model.Image)" class="img-thumbnail fit"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


