@model SimpleWebsite.MVC.Models.Product

@{
    ViewData["Title"] = "Edytuj";
}

<div class="row mt-5">
    <h1 class="display-5 text-center">Edytuj dane drona</h1>
    <hr>
</div>
<div>
    <a type="button" class="btn btn-secondary" asp-action="Index">Powrót do katalogu</a>
</div>
<div class="row">
    <div class="col-4"></div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cena</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Zdjęcie</label>
                <input asp-for="Image" class="form-control" type="file" id="formFile"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Edytuj" class="btn btn-color" />
            </div>
        </form>
    </div>
    <div class="col-4"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
