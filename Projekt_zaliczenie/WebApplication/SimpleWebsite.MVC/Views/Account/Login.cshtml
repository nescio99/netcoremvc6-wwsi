@model SimpleWebsite.MVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row mt-5">
    <div class="col-lg-4 col-2"></div>
    <div class="col-lg-4 col justify-content-center">
        <h1 class="display-5 text-center">@ViewData["Title"]</h1>
        <hr>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="Username" class="form-label">Nazwa</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Hasło</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <div id="passwordHelp" class="form-text">Nigdy nie udostępniaj swojego hasła!</div>
            </div>

            <div class="mb-3 form-check">
                <label class="form-check-label">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                    Zapamiętaj mnie
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Zaloguj się</button>
        }
    </div>
    <div class="col-lg-4 col-2"></div>
</div>

